{
  "name": "code-frontmatter",
  "version": "0.2.9",
  "description": "让每一个代码文件拥有自己的身份证，让 AI 不读全文就能理解你的整个项目。An MCP Server that gives every code file a self-describing frontmatter header for AI assistants.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "code-frontmatter": "dist/index.js",
    "cfm-check": "dist/bin/cfm-check.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "setup-hooks": "node scripts/setup-hooks.mjs",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/",
    "languages/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "mcp",
    "ai",
    "code-frontmatter",
    "cfm",
    "metadata",
    "yaml",
    "vibe-coding",
    "llm",
    "context",
    "token-optimization"
  ],
  "author": "coobi7",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/coobi7/code-frontmatter.git"
  },
  "bugs": {
    "url": "https://github.com/coobi7/code-frontmatter/issues"
  },
  "homepage": "https://github.com/coobi7/code-frontmatter#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "yaml": "^2.7.1",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "typescript": "^5.8.3"
  }
}